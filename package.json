{
  "name": "semester-project-noroff",
  "version": "1.0.0",
  "description": "The Bidzone auction website application empowers users to seamlessly bid, discover unique items, and relish the excitement of competitive online auctions within an intuitive and user-friendly interface.",
  "type": "module",
  "main": "index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "format": "prettier -w src/**/*.js",
    "lint": "eslint src/**/*.js",
    "lint-fix": "eslint src/**/*.js --cache --fix",
    "prepare": "husky install",
    "build": "sass src/scss:dist/css",
    "watch": "sass --watch src/scss:dist/css & live-server",
    "start": "live-server",
    "dev": "npm-run-all --parallel watch start"
  },
  "keywords": ["auction", "bidding", "Bidzone", "deals", "online bidding"],
  "author": "Sabina Kutniauske <saibia@gmail.com>",
  "license": "ISC",
  "devDependencies": {
    "eslint": "^8.48.0",
    "husky": "^8.0.3",
    "lint-staged": "^14.0.1",
    "live-server": "^1.2.2",
    "prettier": "^3.0.3",
    "sass": "^1.66.1"
  },
  "lint-staged": {
    "*.js": [
      "prettier --write",
      "eslint --fix"
    ],
    "*.html": [
      "prettier --write"
    ],
    "*.scss": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "bootstrap": "^5.3.1"
  }
}
